        "GreenTeaEnabled":
        {
            "AllowValues": "true, false",
            "Default": "true"
        },

        "TeaCropEnabled":
        {
            "AllowValues": "true, false",
            "Default": "true"
        },

        "RiceCropEnabled":
        {
            "AllowValues": "true, false",
